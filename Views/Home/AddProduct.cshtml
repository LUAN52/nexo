@model Product

<h1 class="subTtitle"> Cadastrar Produto</h1>
<form asp-action="AddProduct" asp-controller="Home" class="form">
  <div class="form-group">
    <label for="productName">Nome produto</label>
    <input id="nameId" type="text" class="form-control"  placeholder="digite o produto" name="productName">
    <span id="nameErrorId"  class="text-danger"></span>
  </div>
  <div class="form-group">
    <label  >Preço</label>
    <input  type="text" class="form-control" id="precoId" placeholder="digite o preço" name="price">
    <span id="priceErrorId"  class="text-danger"></span>
  </div>
  <button  id="aqui" type="submit" class="btn btn-primary">Adicionar Produto</button>
</form>


  <script src="~/js/site.js"></script>