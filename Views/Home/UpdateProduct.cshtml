
@model Product


<form asp-action="UpdateProduct" asp-controller="Home" asp-route-id="@Model.id" class="form">
  <div class="form-group">
    <label for="productName">Nome produto</label>
    <input type="text" class="form-control"  placeholder="digite o nome produto" name="productName" value="@Model.Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Preço</label>
    <input type="text" class="form-control"  placeholder="preço" name="price" value="@Model.Price">
  </div>
  <button type="submit" class="btn btn-primary">Atualizar Produto</button>
</form>